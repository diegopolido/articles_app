<%= link_to "Clear stats",
            dashboard_destroy_histories_path,
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-danger btn-xs' %>
<div class="page-header">
  <h1>Search</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Term</th>
      <th>Total Searches</th>
    </tr>
  </thead>
  <tbody>
    <% @search_histories.each do |term, total| %>
      <tr>
        <td><%= term %></td>
        <td><%= total %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="page-header">
  <h1>Search without results</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Term</th>
      <th>Total Searches</th>
    </tr>
  </thead>
  <tbody>
    <% @search_histories_no_results.each do |term, total| %>
      <tr>
        <td><%= term %></td>
        <td><%= total %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="page-header">
  <h1>Search by IP address</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>IP</th>
      <th>Terms</th>
    </tr>
  </thead>
  <tbody>
    <% @search_histories_by_ip.each do |array| %>
      <tr>
        <td><%= array[0] %></td>
        <td><%= array[1].uniq.join(", ") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
